<p id="notice">
    <%= notice %>
</p>
<h1>Emails Box</h1>

<div class="container">
    <div class="row">
        <div class="col-md-3 bg-primary">
            <table class="table">
                <thead>
                    <tr>
                        <th>Mail box</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @emails.each do |email| %>
                        <tr>
                            <td class="">
                                <%= link_to email.object, email, :remote => true, class:"objet" %>
                            </td>
                        </tr>
                        <% end %>
                </tbody>
            </table>
        </div>
        <div class="col-md-9 email-content">
          <div id="contenu"> </div>
        </div>
    </div>
</div>